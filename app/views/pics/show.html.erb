<div class="pic_show row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel heading pic_image">
			<center><%= image_tag @pic.image.url, class: "img-fluid" %></center>
			</div>

		<div class="panel-body">
			<h1><%= @pic.title %></h1>
			<p><%= @pic.description %></p>
		</div>

		<div class="panel-footer">
			<div class="row">
				<div class="col-md-6">
					<p>by <%= @pic.user.email %></p>
				</div>

				<div class="btn-group pull-right">
					  <%= link_to like_pic_path(@pic), method: :put, class: "btn btn-default" do %>
                	<span class="glyphicon glyphicon-thumbs-up"></span>
                	<%= @pic.get_upvotes.size %>	
						
					<% end %>

					<% if @pic.user == current_user %>
						<%= link_to "Fix Pic", edit_pic_path, class: "btn btn-info" %>
						<%= link_to 'Delete', pic_path, method: :delete, data: {
          					confirm: 'Are you sure?'}, class: "btn btn-info" %>
						
					

					<% end %>
				</div>
			</div>
		</div>
	</div>
			


			</div>
		</div>
	</div>
</div>
